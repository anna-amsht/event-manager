<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.client.controllers.participant.VisitEventController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
        <VBox prefHeight="552.0" prefWidth="598.0" spacing="10" style="-fx-padding: 20;">
            <Label fx:id="titleLabel" style="-fx-font-size: 24; -fx-text-fill: #661fbc;" />
            <Label fx:id="dateLabel" style="-fx-font-size: 16;" />
            <Label fx:id="locationLabel" style="-fx-font-size: 16;" />
            <Label fx:id="seatsLabel" style="-fx-font-size: 16;" />
            <Label fx:id="formatLabel" style="-fx-font-size: 16;" />
            <TextArea fx:id="descriptionArea" editable="false" prefHeight="161.0" prefWidth="558.0" style="-fx-font-size: 14; -fx-background-color: transparent;" wrapText="true" />
            <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="backButton" onMouseClicked="#handleBackButton" style="-fx-background-color: #9281D3; -fx-text-fill: white;" text="Назад" />
                <Button fx:id="registerButton" onAction="#handleRegisterButton" text="Записаться" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>

        </VBox>
    </ScrollPane>
</AnchorPane>
