<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.client.controllers.participant.InvitationsController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <BorderPane prefHeight="600.0" prefWidth="800.0">
        <center>
            <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #661fbc;">
                <Label prefHeight="35.0" prefWidth="204.0" style="-fx-font-size: 24; -fx-text-fill: white;" text="Мои приглашения" />

                <TableView fx:id="invitationsTable" maxWidth="575.0" prefHeight="400" prefWidth="575.0">
                    <columns>
                        <TableColumn fx:id="eventColumn" prefWidth="200" text="Мероприятие" />
                        <TableColumn fx:id="organizerColumn" prefWidth="200" text="Организатор" />
                        <TableColumn fx:id="statusColumn" prefWidth="100" text="Статус" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER" spacing="20">
                    <Button onAction="#acceptInvitation" style="-fx-background-color: #4CAF50;" text="Принять" />
                    <Button onAction="#declineInvitation" style="-fx-background-color: #F44336;" text="Отклонить" />
                </HBox>
            </VBox>
        </center>
      <top>
         <AnchorPane prefHeight="32.0" prefWidth="800.0" style="-fx-background-color: #661fbc;" BorderPane.alignment="CENTER">
            <children>
               <FontIcon fx:id="backButton" iconColor="WHITE" iconLiteral="fa-arrow-left" onMouseClicked="#back" iconSize="20" layoutX="29.0" layoutY="44.0" wrappingWidth="25.0">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </FontIcon>
               <FontIcon fx:id="exitButton" iconColor="WHITE" iconLiteral="fa-close" onMouseClicked="#closePr" iconSize="20" layoutX="746.0" layoutY="44.0">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </FontIcon>
            </children>
         </AnchorPane>
      </top>
    </BorderPane>
</AnchorPane>
