                              <Cursor fx:constant="TEXT" />
                           </cursor>
                        </TextField>
                        <FontIcon iconLiteral="fa-arrow-left" iconSize="20" layoutX="70.0" layoutY="113.0" onMouseClicked="#back">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </FontIcon>
                        <Button layoutX="422.0" layoutY="84.0" mnemonicParsing="false" onAction="#createEvent" styleClass="createButton" text="Создать" textFill="#c937b6" />
                        <TextField fx:id="formatField" layoutX="279.0" maxWidth="242.0" minHeight="35.0" minWidth="90.0" prefHeight="35.0" prefWidth="242.0" promptText="Формат проведения">
