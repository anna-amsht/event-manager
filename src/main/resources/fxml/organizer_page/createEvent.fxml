               <children>
                  <Text fill="#7d29a1" strokeType="OUTSIDE" strokeWidth="0.0" text="Форма для заполнения" textAlignment="CENTER" wrappingWidth="583.13671875">
                     <font>
                        <Font name="Century Gothic Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="30.0" top="20.0" />
                     </VBox.margin>
                  </Text>
                  <TextField fx:id="titleField" maxWidth="450.0" minHeight="35.0" minWidth="100.0" prefHeight="35.0" prefWidth="450.0" promptText="Тема мероприятия">
