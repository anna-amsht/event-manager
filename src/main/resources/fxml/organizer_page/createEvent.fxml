                        <Insets bottom="30.0" left="70.0" />
                     </VBox.margin>
                  </TextArea>
                  <TextField fx:id="placeField" maxWidth="450.0" minHeight="35.0" minWidth="100.0" prefHeight="35.0" prefWidth="450.0" promptText="Место проведения">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="30.0" left="70.0" />
                     </VBox.margin>
                  </TextField>
                  <TextField fx:id="dateField" maxWidth="450.0" minHeight="35.0" minWidth="100.0" prefHeight="35.0" prefWidth="450.0" promptText="Дата и время проведения">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="30.0" left="70.0" />
                     </VBox.margin>
                  </TextField>
                  <AnchorPane prefHeight="141.0" prefWidth="584.0">
                     <children>
                        <TextField fx:id="seatsField" maxWidth="30.0" minHeight="35.0" minWidth="90.0" prefHeight="35.0" prefWidth="93.0" promptText="Кол-во мест" AnchorPane.leftAnchor="70.0">
