                        <Cursor fx:constant="TEXT" />
                     </cursor>
                     <VBox.margin>
                        <Insets bottom="30.0" left="70.0" />
                     </VBox.margin>
                  </TextField>
                  <TextArea fx:id="descriptionArea" maxWidth="450.0" prefHeight="95.0" prefWidth="450.0" promptText="Дайте описание мероприятию">
