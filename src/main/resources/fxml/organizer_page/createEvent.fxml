    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <BorderPane prefHeight="600.0" prefWidth="800.0">
            <left>
                <VBox prefHeight="596.0" prefWidth="216.0" style="-fx-background-color: #9281D3;" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="createButton" alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="60.0" prefWidth="216.0" stylesheets="@styles.css" text="СОЗДАТЬ" textFill="WHITE">
