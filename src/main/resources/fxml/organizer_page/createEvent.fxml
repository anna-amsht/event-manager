                              <Cursor fx:constant="TEXT" />
                           </cursor>
                        </TextField>
                     </children>
                      <Label fx:id="errorLabel" alignment="CENTER" layoutX="141.0" layoutY="44.0" prefHeight="17.0" prefWidth="302.0" textAlignment="CENTER" textFill="red" />
                  </AnchorPane>
               </children>
            </VBox>
